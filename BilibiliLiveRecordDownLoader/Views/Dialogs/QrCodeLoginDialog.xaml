<local:DisposableContentDialog
    x:Class="BilibiliLiveRecordDownLoader.Views.Dialogs.QrCodeLoginDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BilibiliLiveRecordDownLoader.Views.Dialogs"
    mc:Ignorable="d"
    d:DesignHeight="800"
    d:DesignWidth="600"
    PrimaryButtonText="我已扫描"
    CloseButtonText="取消"
    DefaultButton="Primary">
    <Grid>
        <TextBlock x:Name="MessageTextBlock" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Image Grid.RowSpan="3"
               x:Name="QrCodeImage"
               Width="300" Margin="0,0,10,0"
               d:Source="https://i1.hdslb.com/bfs/face/d14fb85fd5f92761700ff9971a3d923f180598c1.jpg"
               RenderOptions.BitmapScalingMode="HighQuality"
               RenderOptions.EdgeMode="Aliased" />
      </Grid>
</local:DisposableContentDialog>
